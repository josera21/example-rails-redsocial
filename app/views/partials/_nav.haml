%header.mdl-layout__header
  .mdl-layout__header-row
    %span.mdl-layout-title= link_to "Red Social", root_path, class:"white-text", style:"text-decoration:none;"
    .mdl-layout-spacer
    %nav.mdl-navigation.mdl-layout--large-screen-only
      -if user_signed_in?
        .right-space
          .circle.red.white-text#notification= current_user.unviewed_notifications_count
        =link_to "Mis amigos", friendships_path, class:"white-text right-space"
        =link_to current_user.username, current_user, class:"white-text right-space"
        =link_to "Cerrar sesion", destroy_user_session_path, method: :delete, class:"white-text"

.mdl-layout__drawer
  %span.mdl-layout-title Red Social
  %nav.mdl-navigation